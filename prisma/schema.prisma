// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Stock {
  stockId         String         @id // e.g., "2881"
  name            String
  category        String         // "官股" or "民營"
  bookValue       Float?         // 每股淨值
  dividendPolicy  Float?         // 盈餘分配率
  prices          DailyPrice[]
  chips           ChipAnalysis[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model DailyPrice {
  id        Int      @id @default(autoincrement())
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [stockId])
  timestamp DateTime
  price     Float
  volume    BigInt
  
  @@unique([stockId, timestamp])
  @@index([stockId, timestamp])
}

model ChipAnalysis {
  id                  Int      @id @default(autoincrement())
  stockId             String
  stock               Stock    @relation(fields: [stockId], references: [stockId])
  date                DateTime
  institutionalBuy    BigInt   // 三大法人合計買賣超
  governmentBankBuy   BigInt   // 官股行庫買賣超
  retailFomoScore     Float?   // 散戶擁擠度評分
  
  @@unique([stockId, date])
}

model UserSubscription {
  userId      String    @id @default(uuid())
  email       String    @unique
  planType    String    @default("FREE")
  avgCost     String?   // e.g., '{"2881": 65.2}' stored as string
  expiryDate  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
