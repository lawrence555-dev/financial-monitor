generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanType {
  FREE
  PRO
}

model Stock {
  stockId         String         @id // e.g., "2881"
  name            String
  category        String         // "官股" or "民營"
  bookValue       Decimal?       // 每股淨值
  dividendPolicy  Decimal?       // 盈餘分配率
  prices          DailyPrice[]
  chips           ChipAnalysis[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model DailyPrice {
  id        Int      @id @default(autoincrement())
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [stockId])
  timestamp DateTime
  price     Decimal
  volume    BigInt
  
  @@unique([stockId, timestamp])
  @@index([stockId, timestamp])
}

model ChipAnalysis {
  id                  Int      @id @default(autoincrement())
  stockId             String
  stock               Stock    @relation(fields: [stockId], references: [stockId])
  date                DateTime
  institutionalBuy    BigInt   // 三大法人合計買賣超
  governmentBankBuy   BigInt   // 官股行庫買賣超
  retailFomoScore     Decimal? // 散戶擁擠度評分
  
  @@unique([stockId, date])
}

model UserSubscription {
  userId      String    @id @default(uuid())
  email       String    @unique
  planType    PlanType  @default(FREE)
  avgCost     Json?     // e.g., {"2881": 65.2}
  expiryDate  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
