// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  stockId         String         @id // e.g., "2881"
  name            String
  category        String         // "官股" or "民營"
  bookValue       Float?         // 每股淨值
  dividendPolicy  Float?         // 盈餘分配率
  prices          DailyPrice[]
  chips           ChipAnalysis[]
  portfolioHoldings PortfolioHolding[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

model DailyPrice {
  id        Int      @id @default(autoincrement())
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [stockId])
  timestamp DateTime
  price     Float
  volume    BigInt
  
  @@unique([stockId, timestamp], name: "stockId_timestamp")
  @@index([stockId, timestamp])
}

model ChipAnalysis {
  id                  Int      @id @default(autoincrement())
  stockId             String
  stock               Stock    @relation(fields: [stockId], references: [stockId])
  date                DateTime
  institutionalBuy    BigInt
  governmentBankBuy   BigInt
  retailFomoScore     Float?   // 散戶擁擠度評分
  
  @@unique([stockId, date])
}

model UserSubscription {
  userId      String    @id @default(uuid())
  email       String    @unique
  planType    String    @default("FREE")
  avgCost     String?   // e.g., '{"2881": 65.2}' stored as string
  expiryDate  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model PortfolioHolding {
  id        String   @id @default(uuid())
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [stockId])
  avgCost   Float    // 平均成本
  quantity  Int      // 持有股數
  userId    String   @default("default-user") // 預設單一用戶
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, stockId])
  @@index([userId])
}

model TaxScenario {
  id            String   @id @default(uuid())
  userId        String   @default("default-user")
  stockId       String
  stockName     String
  shares        BigInt
  price         Float
  dividend      Float
  totalDividend Float
  netDividend   Float
  nhiPremium    Float
  taxCredit     Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}
